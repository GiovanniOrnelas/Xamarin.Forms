<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.IMC">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Digite seu peso atual" FontSize="Medium"/>
                <Entry x:Name ="etPeso" Keyboard="Numeric" Placeholder="Peso..." FontSize="Subtitle"/>
                <Label Text="Digite sua altura atual" FontSize="Medium"/>
                <Entry x:Name ="etAltura" Keyboard="Numeric" Placeholder="Altura..." FontSize="Subtitle"/>
                <StackLayout Orientation="Horizontal">
                    <Button Text ="Executar" Clicked ="BtExecutar_Clicked" />
                </StackLayout>
                <Label x:Name="lbRespIMC" FontSize="Medium" />
                <Label x:Name="lbResp" FontSize="Medium" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>