<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Prefeitura">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Qual é o seu salário mensal" FontSize="Medium"/>
            <Entry x:Name ="etSalario" Keyboard="Numeric" Placeholder="Salario..." FontSize="Subtitle"/>
            <Label Text="Qual a prestação que você deseja pegar?" FontSize="Medium"/>
            <Entry x:Name ="etprestacao" Keyboard="Numeric" Placeholder="Prestação..." FontSize="Subtitle"/>
            <StackLayout Orientation="Horizontal">
                <Button Text ="Calcular" Clicked ="BtCalcular_Clicked" />
            </StackLayout>
            <Label x:Name="lbResp" FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>