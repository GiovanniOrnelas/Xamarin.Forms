<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Divisel">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Digite o valor de A..." FontSize="Medium"/>
            <Entry x:Name ="etValorA" Keyboard="Numeric" Placeholder="Valor de A" FontSize="Subtitle"/>
            <Label Text="Digite o valor de B..." FontSize="Medium"/>
            <Entry x:Name ="etValorB" Keyboard="Numeric" Placeholder="Valor de B" FontSize="Subtitle"/>
            <StackLayout Orientation="Horizontal">
                <Button Text ="Calcular" Clicked ="BtCalcular_Clicked" />
            </StackLayout>
            <Label x:Name="lbResp" FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>