<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.IntervaloDeTempo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Informe uma quantidade de dias"/>
            <Entry x:Name ="etDias" Keyboard="Numeric" Placeholder="Dias..."/>
            <StackLayout Orientation="Horizontal">
                <Button Text ="Executar" Clicked ="BtExecutar_Clicked" />
            </StackLayout>
            <Label x:Name="lbResp" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>