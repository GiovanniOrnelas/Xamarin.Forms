<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Equacao">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Informe o valor de A" FontSize="Medium"/>
            <Entry x:Name ="etA" Keyboard="Numeric" Placeholder="A"/>
            <Label Text="Informe o valor de B" FontSize="Medium"/>
            <Entry x:Name ="etB" Keyboard="Numeric" Placeholder="B"/>
            <Label Text="Informe o valor de C" FontSize="Medium"/>
            <Entry x:Name ="etC" Keyboard="Numeric" Placeholder="C"/>
            <StackLayout Orientation="Horizontal">
                <Button Text ="Calcular" Clicked ="BtCalcular_Clicked" />
            </StackLayout>
            <Label x:Name="lbResp" FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>