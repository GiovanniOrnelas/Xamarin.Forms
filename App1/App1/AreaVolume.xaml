<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.AreaVolume">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Cálculo da área e o volume de um cilindro"/>
            <Label Text="Digite o valor do raio do cilíndro"/>
            <Entry x:Name ="etRaio" Keyboard="Numeric" Placeholder="Digite o raio"/>
            <Label Text="Digite o valor da altura do cilíndro"/>
            <Entry x:Name ="etAltura" Keyboard="Numeric" Placeholder="Digite a altura"/>
            <StackLayout Orientation="Horizontal">
                <Button Text ="Executar" Clicked="btExecutar_Clicked" />
            </StackLayout>
            <Label x:Name="lbResp" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>