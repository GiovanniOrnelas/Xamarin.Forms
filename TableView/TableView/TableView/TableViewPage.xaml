<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TableView.TableViewPage">

    <TableView Intent="Form" BackgroundColor="Orange">

        <TableRoot>

            <TableSection Title="Cadastro" 
                          TextColor="White">
                
                <TextCell Text="Nome"
                          Detail="Giovanni Ornelas" 
                          TextColor="Black"/>
                
                <EntryCell Label="Endereço" 
                           Placeholder="Digite aqui" 
                           LabelColor="Black"/>
                
                <SwitchCell Text="Enviar E-mail?"
                            On="True"/>
            
            </TableSection>

        </TableRoot>
    </TableView>
    
</ContentPage>