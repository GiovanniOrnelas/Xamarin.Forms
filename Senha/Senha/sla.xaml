<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Senha.sla">
    <ContentPage.Content>
        <Grid HorizontalOptions="Center" Padding="0,0,0,60">
            <Label Text="1 2 3 4" Grid.Column="1" Grid.Row="1" FontSize="32"/>

            <Button Text="1" Grid.Column="0" Grid.Row="2"/>
            <Button Text="2" Grid.Column="1" Grid.Row="2"/>
            <Button Text="3" Grid.Column="2" Grid.Row="2"/>
            <Button Text="4" Grid.Column="0" Grid.Row="3"/>
            <Button Text="5" Grid.Column="1" Grid.Row="3"/>
            <Button Text="6" Grid.Column="2" Grid.Row="3"/>
            <Button Text="7" Grid.Column="0" Grid.Row="4"/>
            <Button Text="8" Grid.Column="1" Grid.Row="4"/>
            <Button Text="9" Grid.Column="2" Grid.Row="4"/>
            <Button Text="0" Grid.Column="1" Grid.Row="5"/>
            <Button Text="DISCAR" Grid.Column="1" Grid.Row="5"/>
       
        </Grid>
    </ContentPage.Content>
</ContentPage>