<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContentViewApp.Pagina3"
             Title="Site do Boson Treinamentos">
    <StackLayout VerticalOptions="FillAndExpand" Padding="0,10,0,0" BackgroundColor="Black">
        <StackLayout Padding="0,65,0,0">
        <Image Source="https://pbs.twimg.com/media/Dx7YkmUXgAAXZUD.jpg" HeightRequest="150"/>
        </StackLayout>

        <StackLayout Padding="0,30,0,0">
        <Label Text="Usuário" HorizontalOptions="Start" FontSize="Medium" TextColor="White"/>
        <Entry Placeholder="Nome de usuário" HorizontalOptions="FillAndExpand" FontSize="Subtitle" BackgroundColor="White"/>
            <Label Text="Senha" HorizontalOptions="Start" FontSize="Medium" TextColor="White"/>
            <Entry Placeholder="Senha do usuário" HorizontalOptions="FillAndExpand" FontSize="Subtitle" BackgroundColor="White"/>
        </StackLayout>
        
        <StackLayout Padding="0,50,0,0">
        <Button Text="Login" HorizontalOptions="CenterAndExpand" FontSize="Medium" WidthRequest="180"/>
        </StackLayout>
   
    </StackLayout>
</ContentPage>