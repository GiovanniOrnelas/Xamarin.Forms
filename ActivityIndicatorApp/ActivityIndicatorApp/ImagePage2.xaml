<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ActivityIndicatorApp.ImagePage2">

    <AbsoluteLayout>
        
        <ActivityIndicator Color="Orange" 
                IsRunning="{Binding Source= {x:Reference image}, Path=IsLoading}"
                AbsoluteLayout.LayoutBounds="0.5 , 0.5 , 200 , 200"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>
        
        <Image x:Name="image" Aspect="AspectFit" 
                Source="https://images8.alphacoders.com/468/thumb-1920-468739.jpg"
                AbsoluteLayout.LayoutBounds="0.5 , 0.5 , 200 , 200"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>

    </AbsoluteLayout>
    
</ContentPage>